extends layout

mixin input(id, type, placeholder)
	input(id='#{id}', type='#{type}', placeholder='#{placeholder}')

block content

	.page-title
		h1 Log-in <small>get into the app</small>
		p Don't have an account? <a href="/register">Register</a> now.

	.row

		.col-md-4
			h3 Classical
			form.form-horizontal(role='form')

				.form-group
					label.control-label.col-sm-3(for='username') Username
					.col-sm-9
						+input('username', 'text', 'Dalaraxis')

				.form-group
					label.control-label.col-sm-3(for='password') Password
					.col-sm-9
						+input('password', 'password', 'iamthelichking')

				.form-group
					.col-sm-offset-3.col-sm-9
						button.btn.btn-success(type='submit') Log-in

